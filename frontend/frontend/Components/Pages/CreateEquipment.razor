@page "/equipment/create"

<PageTitle>Создание оборудования</PageTitle>

<MudGrid Justify="Justify.Center">
    <PageHeader Backlink="/equipment">Создание оборудования</PageHeader>
    <MudItem xs="12">
        <MudForm>
            <MudTextField
                T="string"
                @* @bind-Text="Mail" *@
                Label="Наименование"
                InputType="InputType.Text"
                Required="true"
                Variant="Variant.Outlined"></MudTextField>
            <MudTextField
                T="string"
                @* @bind-Text="Password" *@
                Label="Количество на складе"
                InputType="InputType.Number"
                Required="true"
                Variant="Variant.Outlined"></MudTextField>
            <MudTextField
                T="string"
                @* @bind-Text="Mail" *@
                Label="Модель"
                InputType="InputType.Text"
                Variant="Variant.Outlined"></MudTextField>
            <MudTextField
                T="string"
                @* @bind-Text="Mail" *@
                Label="Серийный номер"
                InputType="InputType.Text"
                Variant="Variant.Outlined"></MudTextField>
            <MudTextField
                T="string"
                @* @bind-Text="Mail" *@
                Label="Инвентарный номер"
                InputType="InputType.Text"
                Variant="Variant.Outlined"></MudTextField>
            <MudSpacer />
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Создать</MudButton>
        </MudForm>
    </MudItem>
</MudGrid>

