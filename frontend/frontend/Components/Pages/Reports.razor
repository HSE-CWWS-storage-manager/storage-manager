@page "/reports"

<PageTitle>Операции</PageTitle>

<MudGrid Justify="Justify.Center">
    <PageHeader Backlink="/home">Операции</PageHeader>
    <MudItem xs="12">
        <MudButton FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" Href="/reports/create-accounting-report">Создать бухгалтерский отчет</MudButton>
    </MudItem>
    <MudItem xs="12">
        <MudTextField T="string" Label="Поиск" FullWidth="true"></MudTextField>
    </MudItem>
    <MudItem xs="12">
        <MudDataGrid Items="ReportData">
            <Columns>
                <PropertyColumn Property="@(item => item.Date.ToString("HH:mm dd.MM.yy"))" Title="Наименование"/>
                @* <PropertyColumn Property="item => item.Id" Title="Guid"/> *@
                <TemplateColumn Title="Тип">
                    <CellTemplate>
                        @if (context.Item.Type == EquipmentOperationType.Transfer)
                        {
                            <MudText>Передача</MudText>
                        }
                        else
                        {
                            <MudText>Получение</MudText>
                        }
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
        </MudDataGrid>
    </MudItem>
</MudGrid>

@code {
    [CascadingParameter] public required EquipmentOperationDto[] ReportData { get; init; }
}