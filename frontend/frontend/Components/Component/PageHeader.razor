<MudItem xs="12" Class="d-flex justify-space-between">
    @if (Backlink == null)
    {
        <MudText Typo="Typo.h4" Class="d-inline-flex align-center">
            @ChildContent
        </MudText>
    }
    else
    {
        <MudLink Href="@Backlink">
            <MudText Typo="Typo.h4" Class="d-inline-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.ChevronLeft" Size="Size.Large"/>
                @ChildContent
            </MudText>
        </MudLink>
    }
    <MudText
         data-decontext="true"
         data-decontext-position-x="right"
         data-decontext-position-y="top"
         data-decontext-filename="@HelpFilename"
         Class="d-inline-flex align-center mr-0"
     >Помощь</MudText>
</MudItem>
<MudDivider/>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public string? Backlink { get; set; }
    
    [Parameter]
    public string? HelpFilename { get; set; }
}