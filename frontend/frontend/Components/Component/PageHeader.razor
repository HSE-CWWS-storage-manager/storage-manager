<MudItem xs="12">
    @if (Backlink == null)
    {
        <MudText Typo="Typo.h4" Class="d-flex align-center">
            @ChildContent
        </MudText>
    }
    else
    {
        <MudLink Href="@Backlink">
            <MudText Typo="Typo.h4" Class="d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.ChevronLeft" Size="Size.Large"/>
                @ChildContent
            </MudText>
        </MudLink>
    }
    <MudDivider/>
</MudItem>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public string? Backlink { get; set; }
}